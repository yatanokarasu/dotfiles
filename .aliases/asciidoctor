ASCIIDOCTOR_BOOKTYPE="-b html5"
ASCIIDOCTOR_DOCTYPE="-d book"
ASCIIDOCTOR_REQUIREMENTS=
ASCIIDOCTOR_REQUIREMENTS="${ASCIIDOCTOR_REQUIREMENTS} -r asciidoctor-diagram"
ASCIIDOCTOR_OPTIONS="${ASCIIDOCTOR_BOOKTYPE} ${ASCIIDOCTOR_DOCKTYPE} ${ASCIIDOCTOR_REQUIREMENTS}"
ASCIIDOCTOR_OPTIONS="${ASCIIDOCTOR_OPTIONS} -a stem"
ASCIIDOCTOR_OPTIONS="${ASCIIDOCTOR_OPTIONS} -a source-highlighter=coderay"
ASCIIDOCTOR_OPTIONS="${ASCIIDOCTOR_OPTIONS} -a coderay-linenums-mode=inline"
ASCIIDOCTOR_OPTIONS="${ASCIIDOCTOR_OPTIONS} -a icons=font"
ASCIIDOCTOR_OPTIONS="${ASCIIDOCTOR_OPTIONS} -a experimental"

alias adoc="asciidoctor ${ASCIIDOCTOR_OPTIONS} -a toc"
alias adoc2="asciidoctor ${ASCIIDOCTOR_OPTIONS} -a toc2"
#alias adoc3="asciidoctor -b pdf -d book -a toc2 -r asciidoctor-rouge -a source-highlighter=rouge -a rouge-theme=monokai"
alias adocpdf="asciidoctor-pdf -b pdf -d book -a toc -a source-highlighter=coderay -r asciidoctor-diagram"
alias adocpdf="asciidoctor -b pdf -d book -a toc2 -r asciidoctor-rouge -a source-highlighter=rouge -a rouge-theme=monokai"
